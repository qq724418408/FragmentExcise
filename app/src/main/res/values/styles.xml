<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 灰色横线 -->
    <style name="line_horizontal_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>

    </style>

    <!-- 灰色竖线 -->
    <style name="line_vertical_gray">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- 黑色小字体 -->
    <style name="text_small_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 白色小字体 -->
    <style name="text_small_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 红色小字体-->
    <style name="text_small_red">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 黑色大字体 -->
    <style name="text_large_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- 黑色大字体 -->
    <style name="text_large_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- 正常字体 -->
    <style name="text_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 正常黑色字体-->
    <style name="text_normal_black">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 正常白色字体-->
    <style name="text_normal_white">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 正常红色字体-->
    <style name="text_normal_red">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 蓝色按钮白色字体 -->
    <style name="button_blue_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- 深蓝色按钮白色字体 -->
    <style name="button_blueDark_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- 按钮白色字体 -->
    <style name="button_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="tab_item_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/selector_tab_menu_bg</item>
        <item name="android:textColor">@drawable/selector_tab_menu_text</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
